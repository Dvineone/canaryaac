{{ sweetAlert|raw }}
<div class="app-content content ">
	<div class="content-overlay"></div>
	<div class="header-navbar-shadow"></div>
	<div class="content-wrapper">
		<div class="content-header row">
			<div class="content-header-left col-md-9 col-12 mb-1">
				<div class="row breadcrumbs-top">
					<div class="col-12">
						<h2 class="content-header-title float-start mb-0">Countdowns</h2>
						<div class="breadcrumb-wrapper">
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a href="{{ URL }}/admin">Home</a>
								</li>
								<li class="breadcrumb-item active">Countdowns</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
		<div class="col-12 col-md-12 col-lg-12 col-sm-12">
		<div class="content-body">
            <div class="row match-height">
                <div class="col-xl-6 col-md-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <form action="{{ URL }}/admin/countdowns" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-12 col-lg-3">
                                    <label class="form-label" for="countdown_date_end">Date End</label>
                                    <input type="date" name="countdown_date_end" id="countdown_date_end" class="form-control" />
                                </div>
                                <div class="col-md-12 col-lg-3">
                                    <label class="form-label" for="countdown_time_end">Time End</label>
                                    <input type="time" name="countdown_time_end" id="countdown_time_end" class="form-control" />
                                </div>
                                <div class="col-md-12 col-lg-6">
                                    <label class="form-label" for="countdown_themebox">Themebox Image</label>
                                    <input type="file" name="countdown_themebox" id="countdown_themebox" class="form-control mb-1">
                                </div>
                                <div class="col-md-12 col-lg-12">
                                    <input type="submit" class="btn btn-primary" value="Submit">
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-md-12 col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Current Countdown</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 col-lg-3">
                                    <label class="form-label">Date Start</label>
                                    <p>{{ current_countdown.date_start }}</p>
                                </div>
                                <div class="col-md-12 col-lg-3">
                                    <label class="form-label">Date End</label>
                                    <p>{{ current_countdown.date_end }}</p>
                                </div>
                                <div class="col-md-12 col-lg-6">
                                    <label class="form-label">Themebox Image</label>
                                    <p><img src="{{ current_countdown.themebox }}"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
            {% for countdown in countdowns %}
            <div class="col-md-4 col-xl-2">
                <div class="card mb-3">
                    <img class="card-img-top" src="{{ countdown.themebox }}" alt="Upload image">
                    <div class="card-body">
                        <label class="form-label" for="upload_url">Created</label>
                        <p>{{ countdown.date_start }}</p>
                        <label class="form-label" for="upload_url">Date End</label>
                        <p>{{ countdown.date_end }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
            </div>
		</div>
		</div>
		</div>
	</div>
</div>